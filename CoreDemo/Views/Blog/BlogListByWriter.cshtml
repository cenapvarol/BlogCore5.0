@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>

<table class="table table-bordered">
    <tr>
        <th>Blog Başlık</th>
        @*<th>Blog İçerik</th>*@
        <th>Blog Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Blog Status</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogTitle</td>
            @*<td>@item.BlogContent</td>*@
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            @*<td>@item.BlogStatus</td>*@
        <td>
            @if (item.BlogStatus == true)
            {
                <span class="badge badge-success">Aktif</span>
            }
            else
            {
                <span class="badge badge-success">Pasif</span>

            }
                </td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-warning">Düzenle</a></td>
        </tr>


    }
</table>

<a href="/Blog/BlogAdd" class="btn btn-primary">Yeni Blog Oluştur</a>

