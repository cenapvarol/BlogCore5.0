@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

<h1>Yazarın Blogları</h1>



<table class="table table-bordered">
    <tr>
        <th>Blog Başlık</th>
        @*<th>Blog İçerik</th>*@
        <th>Blog Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Blog Status</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogTitle</td>
            @*<td>@item.BlogContent</td>*@
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            @*<td>@item.BlogStatus</td>*@
            <td>
                @if (item.BlogStatus == true)
                {
                    <span class="badge badge-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-success">Pasif</span>

                }
            </td>

            <td><a href="/Blog/BlogDelete/@item.BlogID" id="blogSilme" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
             
        </tr>


    }
</table>

<a href="/Blog/BlogAdd" class="btn btn-primary">Yeni Blog Oluştur</a>


<script>
    $("#blogSilme").click(function () {
        Swal.fire({
            title: 'Do you want to save the changes?',
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: 'Save',
            denyButtonText: `Don't save`,
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
                <a href="/Blog/BlogDelete/"+ test1 ></a>
                Swal.fire('Saved!', '', 'success')
            } else if (result.isDenied) {
                Swal.fire('Changes are not saved', '', 'info')
            }
        })
    })
</script>

